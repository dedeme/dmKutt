import "fns";

//: [|]
run = \ -> {
  sys.test(fns.lineSplit(""), []/s/);
  sys.test(fns.lineSplit("1 34, 111"), []/s/);
  sys.test(fns.lineSplit(", ; -- @#"), []/s/);

  sys.test(fns.lineSplit("a"), ["a"]);
  sys.test(fns.lineSplit("1 34,a 111"), ["a"]);
  sys.test(fns.lineSplit(", ; -a- @#"), ["a"]);

  sys.test(fns.lineSplit("a-b-cd"), ["a", "b", "cd"]);
  sys.test(fns.lineSplit("1 34,a-b-cd 111"), ["a", "b", "cd"]);
  sys.test(fns.lineSplit(", ; -a-b-cd- @#"), ["a", "b", "cd"]);

  sys.test(fns.lineSplit("üñáéíóúç3|ÜÑÁÉÍÓÚÇ3"),
    ["üñáéíóúç3", "ÜÑÁÉÍÓÚÇ3"]
  );
  sys.test(fns.lineSplit(", ; -üñáéíóúç3|ÜÑÁÉÍÓÚÇ3- @#"),
    ["üñáéíóúç3", "ÜÑÁÉÍÓÚÇ3"]
  );

  sys.test(
    fns.lineSplit("f2añ 1B, AND. so cañón; e -- # "),
    ["f2añ","B","AND","so","cañón","e"]
  );
};
