/// Progam constants.

import "libdm/svrp";

appName = "News";

/// Application version.
version = "202505";

/// Data base path
//: [|s]
dbPath = \ -> return file.cat(svrp.dataRoot, [appName]);;

/// Log path
//: [|s]
logPath = \ -> return file.cat(dbPath(), ["log.tb"]);;

/// Maximum of entries in historic new table.
maxHistoric = 50_000;

/// Maximum days of keeping a new in thje current news table.
maxDays = 30;



