/// Configuration table.

import "cts";
import "data/conf";
_
//: [|s]
fpath = \ -> return file.cat(cts.dataPath(), ["conf.tb"]);;

/// Initializes table.
//: [|]
init = \ -> if (!file.exists(fpath())) write(conf.newDefault());;

/// Reads table.
//: [|(conf)]
read = \ -> return conf.fromJs(file.read(fpath()));;

/// Writes table.
//: [(conf)|]
write = \:conf o -> file.write(fpath(), o.toJs());;
