/// Constants.

import "libdm/svrp";

/// Application name.
appName = "FMaket";
/// Application version.
version = "202507";
/// Data version.
dataVersion = "202507";
/// Data file.
//: [|s]
dataPath = \ -> return file.cat(svrp.dataRoot, [appName]);;
/// Days for geometrical results average
evalDays = 80;
/// Number of steps for evaluation
evalSteps = 20;
/// Minimum sales to compute results.
minSales = 40.0;

/// Data base ------------------------------------------------------------------

/// Daily periods.
daily, weekly, monthly =:;
/// Periods to save data
//: [|[s]]
periods = \ -> return [daily, weekly, monthly];;
/// Dates in period.
datesInPeriod = 20;

// External paths --------------------------------------------------------------

/// Directory of historic quotes tables type 'NICK.tb'.
quotesPath = "/dm/KtWeb/dmcgi/Market/quotes";
/// Table with companies data.
cosPath = "/dm/KtWeb/dmcgi/Market/cos.tb";

