/// Constants.

import "libdm/svrp";

/// Application name.
appName = "FRMaket";
/// Application version.
version = "202510";
/// Data version.
dataVersion = "202510";
/// Data directory.
//: [|s]
dataPath = \ -> return file.cat(svrp.dataRoot, [appName]);;
/// Number of steps for evaluation
evalSteps = 20;
/// Minimum sales for year to compute results.
minSales = 17;

/// Data base ------------------------------------------------------------------

/// Daily periods.
daily, weekly, monthly =:;
/// Periods to save data
//: [|[s]]
periods = \ -> return [daily, weekly, monthly];;
/// Dates in period.
datesInPeriod = 20;
/// Market Days of year.
ydays = 260;

// External paths --------------------------------------------------------------

/// Directory of historic quotes tables type 'NICK.tb'.
quotesPath = "/dm/KtWeb/dmcgi/Market/quotes";
/// Table with companies data.
cosPath = "/dm/KtWeb/dmcgi/Market/cos.tb";

// Simulation parameteres ------------------------------------------------------

